<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.organize">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Organize">
        <activity
            android:name="activity.DespesasActivity"
            android:theme="@style/despesaTheme"
            android:exported="true" />
        <activity
            android:name="activity.ReceitasActivity"
            android:theme="@style/receitaTheme"
            android:exported="true" />
        <activity
            android:name="activity.Principal_activity"
            android:exported="true"
            android:label="@string/title_activity_principal"
            android:theme="@style/Theme.Organize.NoActionBar" />
        <activity
            android:name="activity.CadastroActivity"
            android:exported="true" />
        <activity
            android:name="activity.LoginActivity"
            android:exported="true" />
        <activity
            android:name="activity.MainActivity"
            android:exported="true"
            android:theme="@style/Theme.Intro">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>